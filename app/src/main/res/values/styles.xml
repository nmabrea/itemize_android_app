<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/itm_primary_grayDark</item>
        <item name="colorPrimaryDark">@color/itm_primary_grayDark</item>
        <item name="colorAccent">@color/itm_secondary_orangeDark</item>
        <item name="colorSecondary">@color/itm_secondary_orangeDark</item>
        <item name="colorOnSecondary">@color/itm_primaryText_white</item>
        <item name="colorOnSurface">@color/itm_secondary_orangeLighter</item>
        <item name="fontFamily">@font/quicksand_medium</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="snackbarButtonStyle">@style/snackbar_button</item>
        <item name="shapeAppearanceMediumComponent">@style/cardview_shapeAppearance_overlay</item>
    </style>

    <style name="cardview_shapeAppearance_overlay" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/itm_card_corner_radius</item>
        <item name="strokeWidth">@dimen/itm_dp_none</item>
    </style>

    <style name="expense_header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/itm_margin_startEnd_min</item>
        <item name="android:paddingEnd">@dimen/itm_margin_startEnd_min</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="expense_subtitle_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/itm_margin_startEnd_min</item>
        <item name="android:paddingEnd">@dimen/itm_margin_startEnd_min</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="expense_body_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/itm_margin_startEnd_min</item>
        <item name="android:textAppearance">?attr/textAppearanceOverline</item>
    </style>

    <style name="patron_subtitle_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_labels" parent="@style/TextAppearance.MaterialComponents.TextView.Label">
        <item name="android:textColor">@color/itm_primaryText_white</item>
        <item name="android:paddingTop">@dimen/itm_button_label_paddingTopBottom</item>
        <item name="android:paddingBottom">@dimen/itm_button_label_paddingTopBottom</item>
    </style>

    <style name="CustomDialog.Window" parent="">
        <item name="android:background">@drawable/itm_button_add</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="snackbar_button" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="backgroundTint">@color/itm_primary_gray</item>
        <item name="android:textColor">@color/itm_primary_grayDark</item>
    </style>

    <style name="patron_button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/itm_primary_grayLight</item>
        <item name="strokeWidth">@dimen/itm_button_outline_stroke</item>
        <item name="paddingStart">@dimen/itm_dp_none</item>
        <item name="paddingEnd">@dimen/itm_dp_none</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>


</resources>